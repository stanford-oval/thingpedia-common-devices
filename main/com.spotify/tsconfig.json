{
  "include": [
      "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020"],
    "module": "commonjs",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "experimentalDecorators": true,
  },
  "typedocOptions": {
    "out": "jsdoc",
    "readme": "README.md",
    "includeVersion": true,
    "excludeExternals": true,
    "listInvalidSymbolLinks": true
  }
}
