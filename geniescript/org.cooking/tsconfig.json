{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020"],
    "module": "commonjs",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "experimentalDecorators": true,
  }
}
